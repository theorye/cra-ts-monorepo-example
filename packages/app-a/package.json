{
  "name": "@app/app-a",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@app/simple-comp": "0.1.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
    "_format-base": "prettier --config ./prettier.config.js \"src/**/*.{ts,tsx,json,css,scss}\"",
    "format": "npm run _format-base -- --write",
    "format-check": "npm run _format-base -- --list-different",
    "precommit": "lint-staged",
    "start": "react-app-rewired start --scripts-version react-scripts-ts",
    "build": "react-app-rewired build --scripts-version react-scripts-ts",
    "test": "react-app-rewired test --scripts-version react-scripts-ts --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@app/rewire": "0.1.0",
    "@types/jest": "^23.0.2",
    "@types/node": "^10.3.2",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "babel-jest": "^23.0.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-app-rewired": "^1.5.2",
    "typescript": "^2.9.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/../packages"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "**/src/**/__tests__/**/*.(j|t)s?(x)",
      "**/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleDirectories": [
      "node_modules",
      "../node_modules",
      "../packages"
    ],
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "/Users/samphan/src/cra-ts-monorepo-example/webapp/tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss}": [
      "prettier --config ./prettier.config.js --write",
      "git add"
    ]
  }
}
