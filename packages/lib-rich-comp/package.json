{
  "name": "@app/rich-comp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-scripts-ts": "2.16.0"
  },
  "scripts": {
    "_format-base": "prettier --config ./prettier.config.js \"src/**/*.{ts,tsx,json,css,scss}\"",
    "format": "npm run _format-base -- --write",
    "format-check": "npm run _format-base -- --list-different",
    "precommit": "lint-staged",
    "start": "react-app-rewired start --scripts-version react-scripts-ts",
    "build": "react-app-rewired build --scripts-version react-scripts-ts",
    "test": "react-app-rewired test --scripts-version react-scripts-ts --env=jsdom",
    "eject": "react-scripts-ts eject",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@app/rewire": "0.1.0",
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/addon-links": "^3.4.8",
    "@storybook/addons": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.2",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/storybook__addon-actions": "^3.0.3",
    "@types/storybook__addon-links": "^3.3.1",
    "@types/storybook__react": "^3.0.8",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "typescript": "^2.9.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss}": [
      "prettier --config ./prettier.config.js --write",
      "git add"
    ]
  }
}
